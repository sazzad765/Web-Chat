<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">


        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Purchase Request"
            android:textColor="@color/white"
            android:theme="@style/txt_bold_small_title" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="Enter your Game id to complete request" />

        <EditText
            android:id="@+id/editGameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView31"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textSize="14sp"
            android:background="@drawable/login_edit_text"
            android:hint="enter game id" />

        <Button
            android:id="@+id/btnReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editGameId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Request" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnReq"
            android:layout_toStartOf="@+id/btnReq"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Cancel" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>